{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest", "--headless", "--viewport-size", "1440x900"]
    },
    "supabase": {
      "command": "npx",
      "args": [
        "-y",
        "@supabase/mcp-server-supabase@latest",
        "--supabase-url",
        "env:SUPABASE_URL",
        "--supabase-service-role-key",
        "env:SUPABASE_SECRET_KEY"
      ]
    },
    "fetch": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-fetch@latest"]
    }
  }
}
